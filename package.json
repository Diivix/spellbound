    "start-nodemon": "yarn build && nodemon --exec babel-node dist/src/server.js"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "dotenv": "^5.0.1",
