{
  "name": "spellbound",
  "version": "0.1.0",
  "description": "The Spellbound project, containing the spellbound-react and soellbound-api projects.",
  "main": "server.js",
  "repository": "https://github.com/Diivix2590/spellbound.git",
  "author": "Chris <chrisiivix@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.2",
    "connect-mongo": "^2.0.1",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "mongoose": "^5.0.7"
  },
  "now": {
    "alias": "spellbound-api",
    "dotenv": true
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
